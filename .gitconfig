[user]
	name = Alastair Lockie
	email = alastair@brandwatch.com
[color]
	branch = auto
	diff = auto
	status = auto
[credential]
	helper = osxkeychain
[alias]
    l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --graph
	co = checkout
	fa = fetch --all
	lsd = ls-files --deleted
	lsu = ls-files --other --exclude-standard
	cano = commit --amend --no-edit --no-verify
    can = commit --amend --no-verify
	ca = commit --amend
	cm = commit
    lastchange = "!f() { git log -p --follow -n $1 $2; }; f"
	fu = fetch upstream
	please = push --force-with-lease
	staash = stash --include-untracked
[merge]
	tool = bcomp
[mergetool]
	prompt = false
[mergetool "bcomp"]
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
	trustExitCode = true
[rerere]
	enabled = true
[core]
	editor = vim
	excludesfile = /Users/alastair/.gitignore_global
	pager = delta
[diff]
	algorithm = patience
        compactionHeuristic = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[interactive]
        diffFilter = delta --color-only --features=interactive

[delta]
        features = decorations

[delta "interactive"]
        keep-plus-minus-markers = false

[delta "decorations"]
        commit-decoration-style = blue ol
        commit-style = raw
        file-style = omit
        hunk-header-decoration-style = blue box
        hunk-header-file-style = red
        hunk-header-line-number-style = "#067a00"
        hunk-header-style = file line-number syntax

